{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "@cucumber/cucumber"]
  },
  "include": [
    "steps/**/*.ts",
    "pages/**/*.ts",
    "features/**/*.ts"
  ]
}
